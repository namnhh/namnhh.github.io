<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoainam.com.huongdichvu.TabNews">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="6dp">

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="Tỉnh Thành:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <Spinner
                android:id="@+id/spCity"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="Quận/Huyện:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <Spinner
                android:id="@+id/spDistrict"
                android:layout_width="178dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="Mức Giá:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diện Tích:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/etSquare"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="62dp"
                android:text="Số tầng:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/etfloorNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="84dp"
                android:layout_height="62dp"
                android:text="Số tầng hầm:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/etbasementNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="number"
                android:layout_weight="1.88" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="62dp"
                android:layout_weight="0.33"
                android:text="Phòng khách:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/etlivingroomNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="83dp"
                android:layout_height="62dp"
                android:text="Phòng ngủ:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/etbedroomNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="0.32"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="0.38"
                android:text="Nhà tắm:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/etbathroomNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="20px"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Nhà bếp:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/etkitchenNo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/btnChoose"
                android:layout_width="68dp"
                android:layout_height="63dp"
                android:layout_marginRight="50dp"
                android:text="Chọn Hình"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="159dp"
                android:layout_height="61dp"
                app:srcCompat="@mipmap/ic_launcher" />




        </LinearLayout>




        <Button
            android:id="@+id/btnUp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="143dp"
            android:layout_height="46dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Đăng"
            android:textSize="24sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
