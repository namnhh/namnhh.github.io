<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoainam.com.huongdichvu.TabListDetail">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="6dp">

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="Tỉnh Thành:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtCity"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:ems="30"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="Quận/Huyện:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtDistrict"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:ems="30"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:ems="30"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="Mức Giá:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:ems="30"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diện Tích:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtSquare"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:ems="30"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="62dp"
                android:text="Số tầng:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtfloorNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:ems="15" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="84dp"
                android:layout_height="62dp"
                android:text="Số tầng hầm:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtbasementNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:ems="15"
                android:layout_weight="1.88" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="62dp"
                android:layout_weight="0.33"
                android:text="Phòng khách:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtlivingroomNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:ems="15"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="83dp"
                android:layout_height="62dp"
                android:text="Phòng ngủ:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtbedroomNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="0.32"
                android:ems="15"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="0.38"
                android:text="Nhà tắm:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtbathroomNo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="20px"
                android:ems="15"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5px"
                android:text="Nhà bếp:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtkitchenNo"
                android:layout_width="91dp"
                android:layout_height="40dp"
                android:ems="15"
               />

        </LinearLayout>
        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:layout_marginTop="20px"
            android:layout_marginBottom="30px"
            android:text="Liên hệ:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="Họ tên:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:ems="30"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="Điện thoại:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:ems="30"
                />
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
